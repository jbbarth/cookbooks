server {
  listen 80;
  server_name <%= @domain %>;
  location / {
    root /usr/share/gitweb;
    if (!-f $request_filename) {
      fastcgi_pass   unix:/var/run/fcgiwrap.socket;
    }
    fastcgi_index  index.cgi;
    fastcgi_param  SCRIPT_FILENAME  /scripts$fastcgi_script_name;
    include    fastcgi_params;
  }
}
